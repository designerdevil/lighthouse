<!doctype html>
<html lang='en'>

<head>
    {{> title}}
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet'>
    {{#if this.form}}
    {{else}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        var reportData = {{{ this.data }}}
        google.load('visualization', '1.1', { packages: ['line'] });
    </script>
    {{/if}}


</head>

<body>
    <div
        style="width: 100%; height: 10px; background: linear-gradient(to right, rgba(52,195,247,1) 0%, rgba(185,114,232,1) 100%); margin-bottom:30px;">
        &nbsp;</div>
    <div>
        {{#if this.form}}
        <div class="container form-group">
            <div class="row ">
                <div class="col-md-6 offset-md-3">
                    <h1>Timeline Filters</h1>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-6 offset-md-3">
                    <form method="POST" action="/generatetimeline" class="form-horizontal">
                        <div class="row form-group">
                            <div class="col-md-6 align-self-center">Brand</div>
                            <div class="col-md-6">
                                <input class="form-control" type="text" id="brand" name="brand" value="brand"
                                    placeholder="Brand with report name">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-6 align-self-center">Type</div>
                            <div class="col-md-6">
                                <select class="form-control" id="type" name="type">
                                    <option value="azure">azure</option>
                                    <option value="gcp">gcp</option>
                                </select></div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-6 align-self-center">Connection String/ Project name</div>
                            <div class="col-md-6">
                                <input class="form-control" type="text" id="connection" name="connection" value=""
                                    placeholder="Connection string or Project name">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-6"></div>
                            <div class="col-md-6"><input class="btn btn-primary" type="submit" value="Submit"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="container form-group">
            <div class="row ">
                <div class="col-md-12">
                    <h1><span class="text-info">{{brand}}</span> audit timeline</h2>
                        <p class="bg-info"
                            style="width:  auto;padding: 5px 10px;color: white;display: inline-block;border-radius: 3px;">
                            Showing results from
                            <span
                                style="color: yellow;font-weight: bold;text-transform: uppercase;">{{this.type}}</span>
                        </p>
                        <br>&nbsp;
                </div>
            </div>
            <div class="row ">
                <div class="col-md-12" id="pages">
                    <h4 class="text-muted">No data found</h4>
                </div>
            </div>
        </div>
        <script src="/static/js/client.js"></script>
        {{/if}}
    </div>
</body>

</html>