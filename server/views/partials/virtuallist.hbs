<h1>Get Reports for <span>{{website}}</span></h1>
{{#if pathname}}
    <h2>Scraping path: <span>{{ pathname }}</span></h2>
{{/if}}
{{#if hasURL}}
    <table>
        <thead>
            <tr>
                <th>SNo.</th>
                <th>Resource</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                {{#each websiteURLs}}
                    <tr>
                    <td>{{@index}}</td>
                    <td>{{this}}</td>
                    <td><a href=/webReport?type=view&url={{this}}>Generate Report</a>
                        <a href=/webReport?type=download&url={{this}}>Download Report</a>
                    </td>
                    </tr>
                {{/each}}
        </tbody>
    </table>
{{else}}
    <h2>Unable to get Checklist!!</h2>
{{/if}}